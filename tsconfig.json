{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",                                /* Specify what module code is generated. */
    "lib": ["ESNext","DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src"
  ]
}